{
  "extends": "@alexey-koran/tsconfig",
  "include": ["./**/*.js", "./**/*.cjs", "./**/*.mjs", "./**/*.ts", "./**/*.cts", "./**/*.mts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
